#-*-Makefile-*- vim:syntax=make
define NULL_HELP

 NULL extras:

   debug    : compile with minimal optimization and debug symbols

endef
HELP += $(NULL_HELP)

OBJCOPY = objcopy
OBJDUMP = objdump
NESC = nescc
SIZE = size
LIBS = -lm

INSTALL_SREC = $(MAIN_SREC).out$(if $(NODEID),-$(NODEID),)

TOSMAKE_VOLUME_FILE = volumes-at45db.xml
TOSMAKE_VOLUME_ALLOCATOR ?= tos-storage-at45db

PFLAGS += -Wall -Wshadow

ifeq ($(findstring Darwin, $(shell uname)), Darwin)
  CFLAGS += -D_FORTIFY_SOURCE=0
  OBJCOPY = /usr/bin/true
  OBJDUMP = /usr/bin/true
endif
